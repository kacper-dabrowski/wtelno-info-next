{
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "prettier",
        "react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/display-name": "off",
        "react/jsx-curly-brace-presence": [
            2,
            {
                "props": "never",
                "children": "never"
            }
        ]
    },
    "globals": {
        "React": "writable",
        "JSX": true
    }
}